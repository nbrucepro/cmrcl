{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/(public)/layout.jsx", "src/app/layout.tsx", "src/app/(dashboard)/inv/products/CreateProductModal.jsx", "src/app/(dashboard)/inv/products/page.jsx", "src/app/(components)/inventory/InventoryBase.jsx", "src/app/(dashboard)/inv/dashboard/CardPopularProducts.jsx", "src/app/(dashboard)/inv/profit-loss/page.jsx", "src/app/(dashboard)/inv/dashboard/CardPurchaseSummary.jsx", "src/app/(dashboard)/inv/dashboard/CardSalesSummary.jsx", "src/app/(components)/Navbar/index.jsx", "src/app/(dashboard)/inv/dashboard/profitLossess.jsx", "src/app/(dashboard)/inv/dashboard/CardExpenseSummary.jsx"],
  "exclude": ["node_modules"]
}
